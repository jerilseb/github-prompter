{
  "manifest_version": 3,
  "name": "GitHub Prompter",
  "version": "1.0.1",
  "description": "Select files as LLM Ready Markdown from GitHub repositories",
  "minimum_chrome_version": "120",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.github.com/repos/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "32": "images/32.png",
    "48": "images/48.png",
    "64": "images/64.png",
    "128": "images/128.png",
    "256": "images/256.png"
  }
}